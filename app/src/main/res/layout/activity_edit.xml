<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.jbt.omdb.EditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/subjectLinearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_text_view"
            android:id="@+id/subjectTextView" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/subjectEditText"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="@dimen/large_text"
            android:textIsSelectable="false" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/body_text_view"
        android:id="@+id/bodyTextView"
        android:layout_below="@id/subjectLinearLayout"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:scrollbars="vertical"
        android:minLines="5"
        android:maxLines="5"
        android:id="@+id/bodyEditText"
        android:layout_below="@id/bodyTextView"
        android:textSize="@dimen/small_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/urlLinearLayout"
        android:layout_below="@id/bodyEditText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url_text_view"
            android:id="@+id/urlTextView" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/urlEditText"
            android:gravity="top"
            android:inputType="textUri|textMultiLine"
            android:scrollbars="vertical"
            android:minLines="4"
            android:maxLines="4"
            android:textSize="@dimen/small_text"
            android:textIsSelectable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/show_button"
            android:id="@+id/urlShowButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/confirmationLinearLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok_button"
            android:id="@+id/okButton"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"
            android:id="@+id/cancelButton"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posterImageView"
        android:layout_below="@id/urlLinearLayout"
        android:layout_above="@id/confirmationLinearLayout"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/elements_vertical_margin"
        android:paddingBottom="@dimen/elements_vertical_margin"
        android:scaleType="centerCrop"
        android:cropToPadding="false" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downloadProgressBar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_alignTop="@+id/posterImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:indeterminate="true" />


</RelativeLayout>
